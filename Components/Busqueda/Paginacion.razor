@using RestauranteVirtual.Web.Utils

@if(CantidadDePaginas > 0)
{
	<div class="container-fluid mb-1 mt-1">
		<div class="col-lg-3" role="status" aria-live="polite">
			Mostrando @(IndiceInicio + 1) al @(IndiceFin + 1) de @(TotalElementos) registros
		</div>

		<div class="col-lg-5" style="text-align:center">
			<ul class="pagination justify-content-center">
				@if (CantidadDePaginas > 5)
				{
					<li class="page-item @(PaginaActual==1?"disabled":"")">
						<a class="page-link acciones" @onclick="e=> CambiarPagina(1, 1)">《</a>
					</li>
				}

				<li class="page-item @(PaginaActual==1?"disabled":"")">
					<a class="page-link acciones" @onclick="e=> CambiarPagina(PaginaActual-5, 1)">〈</a>
				</li>

				@for (int i = PaginadoInicial; i <= PaginadoFinal; i++)
				{
					int idxPag = i;

					if (i == PaginaActual)
					{
						<li class="page-item active">
							<a tabindex="0" class="page-link acciones" @onclick="e=> CambiarPagina(idxPag)">@i</a>
						</li>

					}
					else
					{
						<li class="page-item">
							<a tabindex="0" class="page-link acciones" @onclick="e=> CambiarPagina(idxPag)">@i</a>
						</li>
					}
				}
				<li class="paginate_button page-item next @(PaginaActual==CantidadDePaginas?"disabled":"")">
					<a class="page-link acciones" @onclick="e=> CambiarPagina(PaginaActual+5,4)">〉</a>
				</li>
				@if (CantidadDePaginas > 5)
				{
					<li class="paginate_button page-item next @(PaginaActual==CantidadDePaginas?"disabled":"")">
						<a class="page-link acciones" @onclick="e=> CambiarPagina(CantidadDePaginas, 4)">》</a>
					</li>
				}

			</ul>
		</div>

		<div class="col-lg-4" style="text-align:right;display:flex;justify-content:end">

			<label style="margin-right: 10px;">Mostrar:</label>
			<label style="width:auto">
				<select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" style="width:auto"
		 class="form-select" @onchange="e=>AsignarCantidadPorPagina(int.Parse(e.Value.ToString()))">
					@foreach(var item in ListadoPaginas)
					{
						<option value="@item">@item</option>
					}
				</select>
			</label>
		</div>

	</div>
}


